<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NishTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Display.Small" parent="Theme.NishTrack">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">44sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Title.Medium" parent="Theme.NishTrack">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.Large" parent="Theme.NishTrack">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Body.Small" parent="Theme.NishTrack">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Body.Medium" parent="Theme.NishTrack">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Label.Large" parent="Theme.NishTrack">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!--    100    Extra Light or Ultra Light-->
    <!--    200    Light or Thin-->
    <!--    300    Book or Demi-->
    <!--    400    Normal or Regular-->
    <!--    500    Medium-->
    <!--    600    Semibold, Demibold-->
    <!--    700    Bold-->
    <!--    800    Black, Extra Bold or Heavy-->
    <!--    900    Extra Black, Fat, Poster or Ultra Black-->
</resources>