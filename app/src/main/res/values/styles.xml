<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsRelativeLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/setting_item_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="UpdateField" />

    <style name="UpdateField.SaveBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">100dp</item>
        <item name="android:paddingEnd">100dp</item>
    </style>

    <style name="UpdateField.InputRowLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/transaction_item_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="UpdateField.InputRowLL.RecyclerView">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UpdateField.InputRowLabel" parent="Label.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="UpdateField.InputRowBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/onPrimaryContainer</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="UpdateField.InputRowET" parent="Label.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:autofillHints" />
    </style>

    <style name="UpdateField.InputRowRV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:autofillHints" />
    </style>

    <style name="UpdateField.InputRowRVItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="UpdateField.InputRowRVItemText" parent="Label.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onPrimaryContainer</item>
    </style>

    <style name="UpdateField.InputRowRVItemUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/onPrimaryContainer</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="DataUnitListRVItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/transaction_item_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DataUnitListRVItemText" parent="Label.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onPrimaryContainer</item>
    </style>

</resources>