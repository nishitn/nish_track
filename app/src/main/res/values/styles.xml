<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsRelativeLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/setting_item_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="UpdateField" />

    <style name="UpdateField.SaveBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="UpdateField.InputRowLabel" parent="@style/Label.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="UpdateField.InputRowBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UpdateField.InputRowET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:autofillHints" />
    </style>

    <style name="UpdateField.InputRowETUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/onSurface</item>
    </style>

</resources>