<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/updateAccountFirstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/accountLabelRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:labelFor="@id/accountLabelRowET"
                android:text="@string/label" />

            <EditText
                android:id="@+id/accountLabelRowET"
                style="@style/UpdateField.InputRowET"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updateAccountSaveBtn"
        style="@style/UpdateField.SaveBtn"
        android:text="@string/saveBtnText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>