<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/updateTransactionFirstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/dateRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:text="@string/date" />

            <Button
                android:id="@+id/dateRowBtn"
                style="@style/UpdateField.InputRowBtn"
                android:layout_weight="1"
                android:text="27 Jul 2022" />

            <Button
                android:id="@+id/timeRowBtn"
                style="@style/UpdateField.InputRowBtn"
                android:layout_weight="1"
                android:text="10:43 AM" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/amountRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:labelFor="@id/amountRowET"
                android:text="@string/amount" />

            <EditText
                android:id="@+id/amountRowET"
                style="@style/UpdateField.InputRowET"
                android:importantForAutofill="no"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/noteRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:labelFor="@id/noteRowET"
                android:text="@string/note" />

            <EditText
                android:id="@+id/noteRowET"
                style="@style/UpdateField.InputRowET"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/descriptionRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:labelFor="@id/descriptionRowET"
                android:text="@string/description" />

            <EditText
                android:id="@+id/descriptionRowET"
                style="@style/UpdateField.InputRowET"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">


            <TextView
                android:id="@+id/chapterRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:text="@string/chapter" />

            <Button
                android:id="@+id/chapterRowBtn"
                style="@style/UpdateField.InputRowBtn"
                android:text="@string/chapter" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">

            <TextView
                android:id="@+id/accountRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:text="@string/account" />

            <Button
                android:id="@+id/accountRowBtn"
                style="@style/UpdateField.InputRowBtn"
                android:text="@string/account" />

        </LinearLayout>

        <LinearLayout style="@style/UpdateField.InputRowLL">


            <TextView
                android:id="@+id/categoryRowTV"
                style="@style/UpdateField.InputRowLabel"
                android:text="@string/category" />

            <Button
                android:id="@+id/categoryRowBtn"
                style="@style/UpdateField.InputRowBtn"
                android:text="@string/category" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updateTransactionSaveBtn"
        style="@style/UpdateField.SaveBtn"
        android:text="@string/saveBtnText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>